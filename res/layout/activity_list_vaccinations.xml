<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vaccination.ListVaccinations" >

    <RelativeLayout 
        android:id="@+id/ageGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >
        
        <TextView
            android:id="@+id/ageGroup1Text" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No data for this age group is available right now." />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/ageGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >
        
        <TextView
            android:id="@+id/ageGroup2TextHeader" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="Arial"
            android:layout_marginBottom="20dp"
            android:text="Vaccinations for this age group" />
        
        <TextView
            android:id="@+id/ageGroup2Text1" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ageGroup2TextHeader"
            android:text="Influenza"
            android:fontFamily="Arial"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark" />
        
        <TextView
            android:id="@+id/ageGroup2Text2" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ageGroup2Text1"
            android:text="Tetanus, Diptheria, Pertussis"
            android:fontFamily="Arial"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="10dp" />
        
        <TextView
            android:id="@+id/ageGroup2Text3" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ageGroup2Text2"
            android:text="Varicella"
            android:fontFamily="Arial"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="10dp" />
        
        <TextView
            android:id="@+id/ageGroup2Text4" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ageGroup2Text3"
            android:text="Human papillomavirus (HPV) Female"
            android:fontFamily="Arial"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="10dp" />
        
        <TextView
            android:id="@+id/ageGroup2Text5" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ageGroup2Text4"
            android:text="Human papillomavirus (HPV) Male "
            android:fontFamily="Arial"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="10dp" />
        
        <TextView
            android:id="@+id/ageGroup2Text6" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ageGroup2Text5"
            android:text="Measies, Mumps, Rubella "
            android:fontFamily="Arial"
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="10dp" />
        
    </RelativeLayout>

</RelativeLayout>
